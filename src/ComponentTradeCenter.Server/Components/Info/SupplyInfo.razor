@using ComponentTradeCenter.Server.Data.Model

<div class="dropdown-item-demo">
    <div class="select-custom-header">
        <div class="id">@Value?.CustomId</div>
        <div class="name">@Value?.Name</div>
    </div>
    <div class="select-custom-body">
        <div>@($"供应商ID：{Supplier.GetCustomId(Value?.SupplierId)}")</div>
